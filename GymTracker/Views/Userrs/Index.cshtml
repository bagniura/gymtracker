@using Microsoft.AspNetCore.Identity
<table class="table">
    
    <thead>
    <h1>Dane</h1>
    <tr>
        <th>FirstName</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Registration Date</th>
        <th>Last Login Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    
        <a href="@Url.Action("Create", "Userrs")" class="btn btn-primary">Utwórz profil</a>
    

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Age</td>
            <td>@user.Gender</td>
            <td>@user.Height</td>
            <td>@user.Weight</td>
            <td>@user.RegistrationDate?.ToString("yyyy-MM-dd")</td>
            <td>@user.LastLoginDate?.ToString("yyyy-MM-dd")</td>
            <td>
                <a href="@Url.Action("Edit", "Userrs", new { id = user.Id })" class="btn btn-primary">Edytuj</a>
            </td>
        </tr>
    }
    </tbody>
</table>